<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/event_ad_fragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="40dp">
        <ImageView
            android:id="@+id/event_add_back"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/image8"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="100dp"
            android:layout_height="58dp"
            android:layout_margin="30dp"
            android:background="@drawable/image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/event_add_image"
            android:layout_width="320dp"
            android:layout_height="244dp"
            android:layout_marginTop="40dp"
            android:background="#808080"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView11" />

        <ImageView
            android:id="@+id/add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/image11"
            app:layout_constraintBottom_toBottomOf="@+id/event_add_image"
            app:layout_constraintEnd_toEndOf="@+id/event_add_image"
            app:layout_constraintStart_toStartOf="@+id/event_add_image"
            app:layout_constraintTop_toTopOf="@+id/event_add_image" />
        <TextView
            android:id="@+id/event_chek_n_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"
            android:hint="Название"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_add_image" />
        <EditText
            android:id="@+id/event_add_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Добавьте название"
            android:padding="2dp"
            android:gravity="center"
            android:layout_marginRight="40dp"
            android:background="@drawable/mybt3"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_chek_n_add" />
        <TextView
            android:id="@+id/event_chek_c_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"
            android:hint="Категория"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_add_event_name" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/event_add_event_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/mybt3"
            android:gravity="center"
            android:hint="Добавьте категорию"
            android:padding="2dp"
            android:layout_marginLeft="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_chek_c_add" />

        <TextView
            android:id="@+id/event_chek_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"
            android:hint="Описание"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_add_event_category" />

        <EditText
            android:id="@+id/event_add_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:hint="Добавьте описание"
            android:background="@drawable/mybt3"
            android:singleLine="false"
            android:padding="2dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:breakStrategy="simple"
            android:hyphenationFrequency="full"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_chek_add" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/event_add_event"
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:background="@drawable/mybutton1"
            android:text="Опубликовать"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_add_event_description" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>