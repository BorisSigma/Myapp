<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Москва - единственный поддерживаемый город "
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="4dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/reg_city_new"/>

        <ImageView
            android:id="@+id/reg_logo"
            android:layout_width="100dp"
            android:layout_height="58dp"
            android:background="@drawable/image"
            android:layout_marginTop="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/reg_map_Logo_left"
            android:layout_width="125dp"
            android:layout_height="121dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/image2"
            app:layout_constraintEnd_toStartOf="@+id/reg_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/reg_map_Logo_right"
            android:layout_width="125dp"
            android:layout_height="121dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/image1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.766"
            app:layout_constraintStart_toEndOf="@+id/reg_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/reg_hello_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Регистрация"
            android:textColor="@color/red"
            android:textSize="32dp"
            app:layout_constraintTop_toBottomOf="@+id/reg_logo"
            android:layout_marginTop="130dp"
            />
        <ImageView
            android:id="@+id/reg_login"
            android:layout_width="165dp"
            android:layout_height="156dp"
            android:background="@drawable/image3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_hello_text"
            android:layout_marginTop="40dp"/>

        <EditText
            android:id="@+id/reg_log_new"
            android:layout_width="290dp"
            android:layout_height="46dp"
            android:background="@drawable/mybutton"
            android:gravity="center"
            android:hint="Придумайте логин"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_login"
            android:layout_marginTop="40dp"
            />

        <EditText
            android:id="@+id/reg_user_name"
            android:layout_width="292dp"
            android:layout_height="46dp"
            android:background="@drawable/mybutton"
            android:gravity="center"
            android:hint="Придумайте Имя"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_log_new" />
        <EditText
            android:id="@+id/reg_pass_new"
            android:layout_width="290dp"
            android:layout_height="46dp"
            android:background="@drawable/mybutton"
            android:gravity="center"
            android:hint="Придумайте пароль"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_user_name"
            android:layout_marginTop="40dp"
            />
        <EditText
            android:id="@+id/reg_pass_rep"
            android:layout_width="290dp"
            android:layout_height="46dp"
            android:background="@drawable/mybutton"
            android:gravity="center"
            android:hint="Повторите пароль"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_pass_new"
            android:layout_marginTop="40dp"
            />
        <EditText
            android:id="@+id/reg_city_new"
            android:layout_width="290dp"
            android:layout_height="46dp"
            android:background="@drawable/mybutton"
            android:gravity="center"
            android:hint="Город проживания"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reg_pass_rep"
            android:layout_marginTop="40dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_reg_reg"
            android:layout_width="290dp"
            android:layout_height="46dp"
            android:textColor="@color/white"
            android:background="@drawable/mybutton1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_city_new"
            android:text="Зарегестрироваться"
            android:textSize="16sp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="40dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>