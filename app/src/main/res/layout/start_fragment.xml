<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/start_fragment"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="40dp">


    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:background="@drawable/image"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/map_Logo_left"
        android:layout_width="125dp"
        android:layout_height="121dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/image2"
        app:layout_constraintEnd_toStartOf="@+id/main_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/map_Logo_right"
        android:layout_width="125dp"
        android:layout_height="121dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/image1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.766"
        app:layout_constraintStart_toEndOf="@+id/main_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_hello_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Здравствуйте"
        android:textColor="@color/red"
        android:textSize="32dp"
        app:layout_constraintTop_toBottomOf="@+id/main_logo"
        android:layout_marginTop="150dp"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="165dp"
        android:layout_height="156dp"
        android:background="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_hello_text"
        android:layout_marginTop="30dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_main_in"
        android:layout_width="290dp"
        android:layout_height="46dp"
        android:textColor="@color/white"
        android:background="@drawable/mybutton1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:bottomRightRadius="30dp"
        android:bottomLeftRadius="30dp"
        android:topLeftRadius="30dp"
        android:topRightRadius="30dp"
        android:text="Войти"
        android:textSize="16sp"
        android:layout_marginTop="180dp"
       />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_main_reg"
        android:layout_width="290dp"
        android:layout_height="46dp"
        android:background="@drawable/mybutton1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_main_in"
        android:bottomRightRadius="30dp"
        android:bottomLeftRadius="30dp"
        android:topLeftRadius="30dp"
        android:topRightRadius="30dp"
        android:text="Зарегистрироваться"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"

        />

    <TextView
        android:id="@+id/tv_or"
        android:layout_width="290dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toTopOf="@+id/bt_main_reg"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="или"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/dark_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_main_in" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>